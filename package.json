{
  "name": "catan-game-engine",
  "version": "0.2.0",
  "description": "A complete TypeScript implementation of Settlers of Catan game logic",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest --run",
    "cli": "tsx src/cli/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "keywords": [
    "catan",
    "settlers",
    "board-game",
    "game-engine",
    "typescript",
    "ai",
    "game-ai",
    "settlers-of-catan",
    "event-system",
    "statistics"
  ],
  "author": "Pierre-Etienne Soury",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeFaisLeCafe/catan-game"
  },
  "homepage": "https://github.com/JeFaisLeCafe/catan-game-engine#readme",
  "bugs": {
    "url": "https://github.com/JeFaisLeCafe/catan-game-engine/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "seedrandom": "^3.0.5",
    "xstate": "^5.18.0"
  }
}

